<script>
	$('#dialog_escolher_layout').dialog({
		autoOpen: false,
		width: 630,
		buttons: {
				"Voltar": function() {
					$(this).dialog('close');
				}
			}
	});

	$('#escolher_layout').click(function(){
		$('#dialog_escolher_layout').dialog('open');
		return false;
	});
</script>
